{
  "name": "keeosk",
  "description": "Drive a set of screens displaying dashboards",
  "url": "https://github.com/vincentbernat/dashkiosk",
  "license": "ISC",
  "version": "3.0.0",
  "private": true,
  "bin": {
    "dashkiosk": "./server.js"
  },
  "scripts": {
    "start": "cd dist && NODE_ENV=production && yarn start",
    "test": "mocha ./test/**/*.js",
    "clean": "rm -rf dist && mkdir dist",
    "dist": "yarn --silent clean && yarn --silent build-react && yarn --silent build-server && yarn --silent imagemin",
    "build-react": "cd front && yarn install && yarn build && cd ../ && yarn --silent copy-react",
    "build-server": "cd back && yarn install --ignore-engines && cd .. && yarn --silent copy-server",
    "copy-react": "cp -r front/build/ dist/front",
    "copy-server": "cp -r ./back/* ./dist",
    "lint": "eslint server.js && eslint lib/",
    "imagemin": "imagemin -p dist/front/static/media/* --out-dir=dist/front/static/media",
    "dev": "concurrently -n Server,Front -c \"bgRed.bold,bgBlue.bold\" \"yarn dev-server\" \"yarn dev-front\"",
    "dev-server": "nodemon --ignore './front/' ./server.js",
    "dev-front": "cd front && yarn start",
    "docker-build": "docker build -t dashkiosk .",
    "docker-run": "docker run -d -p 8080:8080 -v /var/lib/dashkiosk/database:/database --rm --name dashkiosk dashkiosk",
    "docker-stop": "docker stop dashkiosk"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/vincentbernat/dashkiosk.git"
  },
  "dependencies": {
    "bluebird": "~2.9.34",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "du": "^0.1.0",
    "errorhandler": "~1.4.2",
    "express": "^4.16.4",
    "express-session": "^1.15.6",
    "express-winston": "~0.3.1",
    "http-auth": "^3.2.3",
    "jimp": "^0.6.4",
    "keycloak-connect": "^5.0.0",
    "later": "~1.1.6",
    "lodash": "^3.10.1",
    "method-override": "~2.3.5",
    "multer": "^1.4.1",
    "nconf": "~0.7.2",
    "nodecastor": "^0.1.8",
    "postal": "~1.0.6",
    "postal.diagnostics": "~0.7.3",
    "prom-client": "^11.3.0",
    "pug": "^2.0.3",
    "sequelize": "~1.7.0",
    "serve-static": "^1.13.2",
    "socket.io": "^2.2.0",
    "winston": "~1.0.1"
  },
  "optionalDependencies": {
    "fsevents": "*",
    "mysql": "~2.8.0",
    "pg": "~4.4.1",
    "respawn": "~2.0.0",
    "sqlite3": "~4.0.6"
  },
  "devDependencies": {
    "blanket": "^1.1.9",
    "concurrently": "^4.1.0",
    "eslint": "^5.16.0",
    "imagemin-cli": "^4.0.1",
    "mocha": "^6.1.4",
    "nodemon": "^1.19.0",
    "should": "~7.0.2",
    "should-http": "0.0.4",
    "sqlite3": "~4.0.6",
    "supertest": "~1.0.1",
    "yarn": "^1.15.2"
  },
  "engines": {
    "node": ">=4.8"
  }
}
