{
  "name": "dashkiosk",
  "description": "Drive a set of screens displaying dashboards",
  "url": "https://github.com/vincentbernat/dashkiosk",
  "license": "ISC",
  "version": "2.7.3",
  "private": true,
  "bin": {
    "dashkiosk": "./server.js"
  },
  "scripts": {
    "start": "node dist/forever.js dist/server.js",
    "test": "grunt test",
    "clean": "rm -rf dist && mkdir dist",
    "dist": "yarn --silent clean && yarn --silent build-react && yarn --silent build-server && yarn --silent imagemin",
    "build-react": "cd front && yarn install && yarn build && cd ../ && yarn --silent copy-react",
    "build-server": "yarn --silent lint && yarn --silent copy-server",
    "copy-react": "cp -r front/build/ dist/front",
    "copy-server": "cp package.json dist/ && cp server.js dist/ && cp forever.js dist/ && cp -r lib/ dist && mkdir -p dist/db/migrations && cp -r db/migrations dist/db",
    "lint": "eslint server.js && eslint lib/",
    "imagemin": "imagemin -p dist/front/static/media/* --out-dir=dist/front/static/media",
    "dev": "concurrently -n Server,Front -c \"bgRed.bold,bgBlue.bold\" \"yarn dev-server\" \"yarn dev-front\"",
    "dev-server": "nodemon ./server.js",
    "dev-front": "cd front && yarn start"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/vincentbernat/dashkiosk.git"
  },
  "dependencies": {
    "bluebird": "~2.9.34",
    "body-parser": "~1.13.3",
    "bootstrap": "^4.3.1",
    "errorhandler": "~1.4.2",
    "express": "~4.13.3",
    "express-session": "^1.15.6",
    "express-winston": "~0.3.1",
    "glob": "~5.0.14",
    "http-auth": "~2.2.7",
    "keycloak-connect": "^5.0.0",
    "later": "~1.1.6",
    "lodash": "~3.10.1",
    "method-override": "~2.3.5",
    "mustache": "^2.2.1",
    "mustache-express": "^1.2.2",
    "nconf": "~0.7.2",
    "postal": "~1.0.6",
    "postal.diagnostics": "~0.7.3",
    "sequelize": "~1.7.0",
    "serve-static": "~1.10.0",
    "socket.io": "~1.4.0",
    "winston": "~1.0.1"
  },
  "optionalDependencies": {
    "fsevents": "*",
    "mysql": "~2.8.0",
    "nodecastor": "~0.1.7",
    "pg": "~4.4.1",
    "respawn": "~2.0.0",
    "sqlite3": "~4.0.6"
  },
  "devDependencies": {
    "blanket": "~1.2.0",
    "concurrently": "^4.1.0",
    "eslint": "^5.16.0",
    "imagemin-cli": "^4.0.1",
    "jshint-stylish": "^2.2.1",
    "mocha": "~1.20.0",
    "nodemon": "^1.19.0",
    "should": "~7.0.2",
    "should-http": "0.0.4",
    "socket.io-client": "~1.4.0",
    "sqlite3": "~4.0.6",
    "supertest": "~1.0.1",
    "yarn": "^1.15.2"
  },
  "engines": {
    "node": ">=4.8"
  }
}
